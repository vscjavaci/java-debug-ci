{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Java Debug",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "mainClass": "org.junit.runner.JUnitCore",
      "args": "MyTest",
      "sourcePaths": [
        "${workspaceRoot}/src/main/java"
      ]
    }
    ,

    {
      "type": "java",
      "name": "Java Debug (Attach)",
      "request": "attach",
      "hostName": "localhost",
      "port": 0,
      "attachTimeout": 30000,
      "cwd": "${workspaceRoot}",
      "sourcePath": [
        "${workspaceRoot}"
      ]
    }
  ]
}